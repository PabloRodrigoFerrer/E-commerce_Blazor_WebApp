@using BlazorWebAppPrueba.Helpers
@rendermode InteractiveServer
@inject SearchService searchService
@inject UserService userService

<nav class="navbar navbar-expand-lg bg-dark navbar-dark align-items-center" data-bs-theme="light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="./Default">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/perfil">Mi Perfil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/carrito">Carrito</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="/listaPedidos">Pedidos</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><button class="dropdown-item" @onclick="userService.Logout">Logout</button></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/listaProductos">Lista productos</a>
                </li>
            </ul>
            <div class="d-flex" role="search">
                <input class="form-control me-2" @bind="SearchText" @bind:event="oninput" @onkeydown="HandleKeyDown" type="search" placeholder="Buscar" aria-label="Buscar"/>
                <a class="btn btn-success" href="/login">Ingresar</a>
            </div>
        </div>
    </div>
</nav>

@code{

    private string SearchText { get; set; } = "";

    private async Task HandleKeyDown (KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            searchService.SetSearchText(SearchText);
    }

}